@model JQueryAjaxCRUDInCore.Models.CTransaction

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.fTranId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="fTranId" />
            <input type="hidden" asp-for="fDate" />
            <div class="form-group">
                <label asp-for="fAccountNum" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">#</div>
                    </div>
                    <input asp-for="fAccountNum" class="form-control" />
                </div>
                <span asp-validation-for="fAccountNum" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fBeneficiaryName" class="control-label"></label>
                        <input asp-for="fBeneficiaryName" class="form-control" />
                        <span asp-validation-for="fBeneficiaryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fBankName" class="control-label"></label>
                        <input asp-for="fBankName" class="form-control" />
                        <span asp-validation-for="fBankName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fSwiftCode" class="control-label"></label>
                        <input asp-for="fSwiftCode" class="form-control" />
                        <span asp-validation-for="fSwiftCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fAmount" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                            </div>
                            <input asp-for="fAmount" class="form-control" />
                        </div>
                        <span asp-validation-for="fAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

